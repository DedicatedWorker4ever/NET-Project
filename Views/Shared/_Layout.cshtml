<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cbsStudents</title>
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cbsStudents.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
</head>

<body>
   <header>

      <div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <div margin-left="50px"><img src="~/images/kea.jpg" width="150" display= "block" margin-left="auto" margin-right="auto"></div>
  <a asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Home</a>
  <a asp-area="" asp-controller="Posts" asp-action="Index"><i class="bi bi-sticky"></i> Posts</a>
  <a asp-area="" asp-controller="Comments" asp-action="Index"><i class="bi bi-chat-text"></i> Comments</a>
  <a asp-area="" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-check"></i> Privacy</a>
    <div width="150"><partial name="_LoginPartial" /></div>
</div>
</header>

<div id="main">
    <!-- Use any element to open the sidenav -->
    <button onclick="openNav()" id="menu" type="button" class="btn btn-primary btn-lg"><i class="bi bi-list"></i>Menu</button>


        
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted" id="footer">
            <div class="container">
                &copy; 2022 - KEA Students - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
