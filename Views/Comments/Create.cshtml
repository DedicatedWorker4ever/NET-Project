@model cbsStudents.Models.Entities.Comment

@{
    ViewData["Title"] = "Create";
}

<h1>Create Post</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group" visibility="hidden">
                <input asp-for="PostId" class="form-control" type="hidden" value='@TempData["postsID"]'/>
            </div><hr>
            <div class="form-group">
                <input type="submit" value="Post" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
   <a asp-action="View" asp-controller="Posts" asp-route-id='@TempData["postsID"]'>Back</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
